{
  "general": {
    "results_directory": "./results",
    "correlation_results_file": "correlated_features.csv",
    "report_title": "Modelo de predicción de hipertensión basado en ENSANUT",
    "processing_mode": "single",
    "verbose": true,
    "config_version": "1.0.0"
  },
  "preprocessing": [
    {
      "input_file": "CS_ADULTOS.csv",
      
    "target_column": {
      "column_name": "P4_1",
      "condition": "x == 1",
      "true_value": "1",
      "false_value": "0",
      "value_type": "int"
    },
      "columns": [
        {
          "column_name": "EDAD",
          "condition": "x > 60",
          "true_value": "1",
          "false_value": "0",
          "value_type": "int"
        },
        {
          "column_name": "P3_11",
          "condition": "x == 1",
          "true_value": "1",
          "false_value": "0",
          "value_type": "int"
        }
      ]
    }
  ],
  "sample_config": {
    "sample_size": 3000,
    "discriminator": 1,
    "test_size": 0.2,
    "correlation_threshold": 0.1,
    "random_seed": 42,
    "output_sample_file": "sample.csv",
    "correlation_method": "pearson"
  },
  "visualization_config": {
    "title": "Correlaciones",
    "show_annotations": false,
    "show_colorbar": true,
    "color_map": "coolwarm",
    "number_format": ".2f",
    "hide_upper_half": true,
    "figure_name": "default_graph",
    "image_format": "svg",
    "display_plot": false,
    "width": 18,
    "height": 12,
    "figures_directory": "figures"
  },
  "models": {
    "models_directory": "models",
    "logistic_regression": {},
    "random_forest": {},
    "svc": {},
    "xgboost": {},
    "ridge": {}
  }
}
